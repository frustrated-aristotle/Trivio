<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trivio</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Trivio.styles.css" asp-append-version="true" />
</head>
<body class="trivio-body">
    <header class="trivio-header">
        <nav class="navbar navbar-expand-sm navbar-dark trivio-navbar shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <span class="trivio-logo-icon me-2">T</span>
                    <span class="fw-bold">Trivio</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item me-2">
                            <a class="nav-link trivio-nav-link" asp-area="" asp-page="/Index">
                                <i class="bi bi-controller me-1"></i>Play
                            </a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link trivio-nav-link" asp-area="" asp-page="/Privacy">
                                <i class="bi bi-shield-lock me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container trivio-main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Trivio - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- 
        CDN:
        <script src="https://unpkg.com/@@microsoft/signalr@latest/dist/browser/signalr.js"></script>
    -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/signalR/dist/browser/signalr.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
